/*to print the following pattern:
      *

     **

    ***

   ****
   */
   package com.company;

public class cwh_35_practice_set_on_methods {

    static void pattern1(int n) {
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < i + 1; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
